#!/bin/bash

exit_code=0

if [ ! $INSTRUMENT ]; then
    regex="aoc\.y.*\.d.*(?<!data)"
    exclude_flag="-e"
    exclude_pattern="instrumented"
else
    regex="aoc\.instrument|aoc\.y.*\.d.*(?<!data)"
fi

if [ ! $SKIP_CLJ ]; then
    echo "=== Running clojure tests $exclude"
    clojure -J-Xmx3200m \
            -R:test:test-clj \
            -e "(require,'patch.clj-2443)" \
            -m cognitect.test-runner -d src -r "$regex" \
            "$exclude_flag" "$exclude_pattern"
fi

if [ $? -eq 1 ]; then
    exit_code=1
fi

if [ ! $SKIP_CLJS ]; then
    echo "\n=== Running cljs tests"
    mkdir -p cljs-test-runner-out/gen
    clojure -A:test:test-cljs \
            -d src -r "$regex" \
            "$exclude_flag" "$exclude_pattern" \
            -c cljs-opts.edn
fi

if [ $? -eq 1 ]; then
    exit_code=1
fi

exit $exit_code
